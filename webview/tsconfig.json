{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDirs": [
      "src",
      "../common"
    ],
    "outDir": "../out/diagram-webview",
    "lib": [
      "ES2022",
      "dom"
    ],
    "declaration": false,
    "declarationMap": false,
    "types": [] // Disables automatic inclusion of global @types/* packages. In this case, the hoisted @types/node package and the DOM package have type conflicts.
  },
  "include": [
    "src", "../common/models.ts",
  ],
}