{
  "name": "vscode-fpp-monorepo",
  "private": true,
  "workspaces": [
    "extension/",
    "webview/"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "typecheck": "yarn workspaces run typecheck",
    "watch": "yarn workspaces run watch",
    "prepublishOnly": "yarn build",
    "antlr": "yarn workspace fpp antlr",
    "package": "yarn build && yarn workspace fpp package"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "shx": "^0.4.0",
    "typescript": "^5.4.5"
  }
}
